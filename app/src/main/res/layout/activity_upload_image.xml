<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.triwayuprasetyo.mapretrofitglidesdp.UploadImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_upload_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image" />

        <Button
            android:id="@+id/button_select_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select File" />

        <Button
            android:text="Camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_camera_upload_image" />
    </LinearLayout>
</LinearLayout>
